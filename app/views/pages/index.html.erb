<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Cotizador de Etiquetas</h1>
        <p class="lead">Ingrese los Valores, para cotizar sus etiquetas:</p>
    </div>
    <div class="jumbotron">
        <%= form_tag(pages_calcular_path, remote: true) do -%>
            <div class="form-group">
                <label for="ancho">Ancho de la etiqueta</label>
                <input type="number" min = "1" max = "100"  name="ancho" class="form-control" placeholder="Ancho en cm." required>
                <label for="alto">Alto de la etiqueta</label>
                <input type="number" min = "1" max = "100" name="alto" class="form-control" placeholder="Alto en cm." required>
                <label for="cantidad">Cantidad de etiquetas</label>
                <input type="number" name="cantidad" class="form-control" placeholder="Cantidad de Etiquetas" required>
                <div><%= submit_tag 'Calcular', class: "btn btn-primary mt-3" %></div>
            </div>
        <% end -%>
    </div>
</div>
